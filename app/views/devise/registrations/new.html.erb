<div class="well">
	<div class="row">
		<div class="span4">
			<h2>Sign up</h2>
			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
					html: { class: 'form-horizontal devise-form' }) do |f| %>
						<%= f.input :email %>
						<%= f.input :password %>
						<%= f.input :password_confirmation %>
						<%= f.button :submit, 'Sign up' %>
			<% end %>
		</div>
		<div class="span4">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>